<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kloginbackground">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/kloginlogo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/text_slogan"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_below="@id/logo"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:paddingRight="36dp"
        android:paddingLeft="36dp"
        android:layout_below="@id/text_slogan"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/kloginusername"
                />

            <EditText
                android:id="@+id/edit_user"
                android:hint="请输入账号"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="28dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16dp"
                android:singleLine="true"
                android:background="@null"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:layout_below="@id/username"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/password"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/kloginpassword"
                />

            <EditText
                android:id="@+id/edit_password"
                android:hint="请输入密码"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="28dp"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="16dp"
                android:background="@null"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:layout_below="@id/password"
            android:background="@color/white" />

        <Button
            android:id="@+id/btn_login"
            android:background="@drawable/btn_login_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="登录" />


    </LinearLayout>


</RelativeLayout>